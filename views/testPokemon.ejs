<% - include("partials/header") %>
<style>
    #notification {
        background-color: green;
        color: white;
        padding: 10px;
    }
</style>
<% if (locals.notification) { %>
    <p id="notification"><%= notification %></p>
    <script>
        setTimeout(() => {
            window.location.href = '/';
        }, 3000);
    </script>
<% } %>
    <div class="container-split">
        <img src="/images/oak.png" alt="">
        <div class="framed">

            <span>Frames can be styled with the primary... <br>
            What is your name?<br>
            </span>

            <div class="players">
                <% for(let player of players){ %>

                    <a href="/player/<%= player._id %>"><%= player.name %></a>
                <% } %>
            </div>

            <form method="POST" action="/createPlayer">
                <input type="text" name="name" value="RED">
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
<% - include("partials/footer") %>
