<!DOCTYPE html>
<html lang="nl-BE">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pokemon bekijken</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <%- include('partials/bootstrap') %>
  <link rel="stylesheet" href="../public/css/eigenPokemonBekijken.css">
  <link rel="stylesheet" href="css/style.css">
</head>

<body>
  <header>
    <%- include('partials/menu') %>
  </header>
  <main>


    <!-- Example single danger button -->
    <div class="btn-group">
      <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Sorteren op
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">Nummer</a></li>
        <li><a class="dropdown-item" href="#">Naam</a></li>
        <li><a class="dropdown-item" href="#">Type</a></li>
      </ul>
    </div>
    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
      Regio's
    </button>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item" href="#">Kanto</a></li>
      <li><a class="dropdown-item" href="#">Johto </a></li>
      <li><a class="dropdown-item" href="#">Hoenn</a></li>
      <li><a class="dropdown-item" href="#">Sinnoh</a></li>
      <li><a class="dropdown-item" href="#">Unova</a></li>
      <li><a class="dropdown-item" href="#">Kalos</a></li>
      <li><a class="dropdown-item" href="#">Galar</a></li>
      <li><a class="dropdown-item" href="#">Hisui</a></li>
      <li><a class="dropdown-item" href="#">Paldea</a></li>
    </ul>
    </div>
    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
      Types
    </button>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item" href="#">Normal</a></li>
      <li><a class="dropdown-item" href="#">Fighting</a></li>
      <li><a class="dropdown-item" href="#">Flying</a></li>
      <li><a class="dropdown-item" href="#">Poison</a></li>
      <li><a class="dropdown-item" href="#">Ground</a></li>
      <li><a class="dropdown-item" href="#">Rock</a></li>
      <li><a class="dropdown-item" href="#">Bug</a></li>
      <li><a class="dropdown-item" href="#">Ghost</a></li>
      <li><a class="dropdown-item" href="#">Steel</a></li>
      <li><a class="dropdown-item" href="#">Fire</a></li>
      <li><a class="dropdown-item" href="#">Water</a></li>
      <li><a class="dropdown-item" href="#">Grass</a></li>
      <li><a class="dropdown-item" href="#">Electric</a></li>
      <li><a class="dropdown-item" href="#">Psychic</a></li>
      <li><a class="dropdown-item" href="#">Ice</a></li>
      <li><a class="dropdown-item" href="#">Dragon</a></li>
      <li><a class="dropdown-item" href="#">Dark</a></li>
      <li><a class="dropdown-item" href="#">Fairy</a></li>
    </ul>
    </div>
    <div class="btn-group">
      <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Special
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">Legendary</a></li>
        <li><a class="dropdown-item" href="#">Mythical</a></li>
        <li><a class="dropdown-item" href="#">Shiny</a></li>
      </ul>
    </div>

    <section id="pokemon">
      <% pokemonlist.forEach(pokemon => { %>
        <figure>
          <h2><%= pokemon.id %></h2><a href="">
            <img src="<%= pokemon.image %>" alt="">
            <figcaption><%= pokemon.name %></figcaption>
          </a>
        </figure>
      <%}); %>
    </section>
  </main>
  <%- include('partials/footer')  %> 